<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cac7c7">


    <TextView
        android:id="@+id/ID_1"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint=" 아이디"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:background="#747474"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <EditText
        android:id="@+id/pw"
        android:layout_below="@+id/ID_1"
        android:background="@color/white"
        android:hint=" 비밀번호"
        android:textSize="20dp"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="1dp"
        android:layout_alignLeft="@+id/ID_1"
        android:layout_alignStart="@+id/ID_1" />

    <EditText
        android:id="@+id/Text6"
        android:layout_below="@+id/pw"
        android:layout_alignLeft="@+id/pw"
        android:layout_alignStart="@+id/pw"
        android:background="@color/white"
        android:textSize="20dp"
        android:hint=" 비밀번호 재확인"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:background="#747474"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint=" 이름"
        android:textSize="20dp"
        android:id="@+id/Text8"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Text6"
        android:layout_alignLeft="@+id/Text6"
        android:layout_alignStart="@+id/Text6" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:inputType="textEmailAddress"
        android:hint=" 이메일"
        android:textSize="20dp"
        android:background="@color/white"
        android:id="@+id/Text7"
        android:layout_below="@+id/Etext8"
        android:layout_alignLeft="@+id/Etext8"
        android:layout_alignStart="@+id/Etext8"
        android:maxLines="1"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="#747474"
        android:inputType="textLongMessage"
        android:hint=" 생년원일"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:id="@+id/Etext8"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/Text4"
        android:layout_alignLeft="@+id/Text4"
        android:layout_alignStart="@+id/Text4" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:hint=" 주소"
        android:textSize="20dp"
        android:inputType="textLongMessage"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:id="@+id/Text10"
        android:layout_below="@+id/Text7"
        android:layout_alignLeft="@+id/Text7"
        android:layout_alignStart="@+id/Text7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="전화번호"
        android:id="@+id/button8"
        android:layout_alignBaseline="@+id/Text4"
        android:layout_alignBottom="@+id/Text4"
        android:layout_alignRight="@+id/Text4"
        android:layout_alignEnd="@+id/Text4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="비밀번호"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/pw"
        android:layout_alignRight="@+id/pw"
        android:layout_alignEnd="@+id/pw" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="주소"
        android:id="@+id/button11"
        android:layout_alignBaseline="@+id/Text10"
        android:layout_alignBottom="@+id/Text10"
        android:layout_alignRight="@+id/Text10"
        android:layout_alignEnd="@+id/Text10" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="이메일"
        android:id="@+id/button10"
        android:layout_below="@+id/Etext8"
        android:layout_alignRight="@+id/Text7"
        android:layout_alignEnd="@+id/Text7" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="생년월일"
        android:id="@+id/button13"
        android:layout_alignBaseline="@+id/Etext8"
        android:layout_alignBottom="@+id/Etext8"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10" />

    <EditText
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:textSize="20dp"
        android:inputType="phone"
        android:hint=" 전화번호"
        android:id="@+id/Text4"
        android:layout_below="@+id/Text8"
        android:layout_alignLeft="@+id/Text8"
        android:layout_alignStart="@+id/Text8" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="이름"
        android:id="@+id/button12"
        android:layout_below="@+id/Text6"
        android:layout_alignRight="@+id/Text6"
        android:layout_alignEnd="@+id/Text6" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="비밀번호 확인"
        android:id="@+id/button15"
        android:layout_below="@+id/pw"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:hint="아이디"
        android:id="@+id/button14"
        android:layout_alignBaseline="@+id/ID_1"
        android:layout_alignBottom="@+id/ID_1"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

</RelativeLayout>