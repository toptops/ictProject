<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cac7c7">


    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/textView3"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:buttonTint="#cac7c7"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:text="모든 약관에 동의"
        android:textSize="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/checkBox4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="5dp"
        android:id="@+id/textView5" />

    <CheckBox
        android:buttonTint="#cac7c7"
        android:textSize="20dp"
        android:text="이용자 약관 동의"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"
        android:id="@+id/checkBox" />

    <TextView
        android:hint="\n\n      이름,휴대폰 전화는\n      서비스 제공을 위해 필요한 최소한의 개인정보 입니다."
        android:background="@color/white"
        android:layout_width="360dp"
        android:layout_height="72dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="1dp"
        android:id="@+id/textView6" />

    <CheckBox
        android:textSize="20dp"
        android:buttonTint="#cac7c7"
        android:text="개인정보 수집 및 이용 동의"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:id="@+id/checkBox2" />

    <TextView
        android:background="@color/white"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <CheckBox
        android:buttonTint="#cac7c7"
        android:textSize="20dp"
        android:text="전자금융거래 이용약관 동의"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <TextView
        android:hint="\n\n      카카오헤어샵은 만 14세 이상만 이용이 가능합니다."
        android:background="@color/white"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="1dp"
        android:id="@+id/textView9" />

    <CheckBox
        android:buttonTint="#cac7c7"
        android:textSize="20dp"
        android:text="연령(만 14세 이상)확인"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:id="@+id/checkBox5" />

    <TextView
        android:hint="\n\n      카카오헤어샵 플러스친구를 통해\n      업데이트, 이벤트 등의 소식을 받습니다."
        android:background="@color/white"
        android:layout_width="360dp"
        android:layout_height="72dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="7dp"
        android:id="@+id/textView10" />

    <CheckBox
        android:textSize="20dp"
        android:text="카카오톡헤어샵 수신 동의(선택)"
        android:buttonTint="#cac7c7"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:id="@+id/checkBox6"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5" />

    <TextView
        android:hint="\n\n      바탕화면에 바로가기 아이콘을 추가하시면\n      빠르고 쉽게 카카오헤어샵을 방문할 수 있습니다."
        android:background="@color/white"
        android:layout_width="360dp"
        android:layout_height="72dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="7dp"
        android:id="@+id/textView11" />

    <CheckBox
        android:buttonTint="#cac7c7"
        android:text="카카오헤어샵 아이콘 추가(선택)"
        android:textSize="20dp"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:id="@+id/checkBox7"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

    <Button
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="동의하고 계속 진행합니다."
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:id="@+id/button4"
        android:layout_marginTop="7dp"
        android:background="@drawable/check_color"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:onClick="mainsignClick" />
</RelativeLayout>